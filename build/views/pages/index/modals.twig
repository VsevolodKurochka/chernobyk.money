{% import 'pages/index/macros.twig' as macros %}
<div class="modal" id="modal-form">
	<div class="modal__box modal__box_default  modal__box_brand-2 modal__box_effect-2 ">
		<div class="modal__header">
			<p class="modal__title modal__title_white">Оставьте заявку</p>
			<button class="modal__close modal__close_white" data-close="modal">&times;</button>
		</div>
		<div class="modal__body">
			<form action="#" class="form form_white form_block" method="POST">
				<div class="form__content">
					{{macros.formRowInput('text', 'name', 'Имя', 'img/icon-avatar.png')}}
					{{macros.formRowInput('email', 'email', 'Email', 'img/icon-email.png')}}
					{{macros.formRowInput('phone', 'phone', 'Телефон', 'img/icon-phone.png')}}
					{{macros.formRowSubmit('Оплатить ЗАКАЗ', 'form__row_submit-center')}}
				</div>
			</form>
		</div>
	</div>
</div>