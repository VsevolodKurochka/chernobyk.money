{% import 'pages/index/macros.twig' as macros %}
{%
	set items = [
		{
			'title': "Пакет <br>Gold",
			'image': 'img/request-1.jpg',
			'list': [
				"Сектор мест GOLD",
				"Полная программа обучения ",
				"Практические задания",
				"Доступ в закрытый чат Telegram",
				"<span class='last crossed'>Личная консультация спикера (1 час)</span>"
			],
			'price': 'ХХХХ ГРН',
			'link_href': '#',
			'link_text': 'Оплатить Gold',
		},
		{
			'title': "Пакет <br>Platinum",
			'image': 'img/request-2.jpg',
			'list': [
				"Сектор мест PLATINUM",
				"Полная программа обучения",
				"Практические задания",
				"Доступ в закрытый чат Telegram",
				"<span class='last'>Личная консультация спикера (1 час)</span>"
			],
			'price': 'ХХХХ ГРН',
			'link_href': '#',
			'link_text': 'Оплатить Platinum',
		},
	]
%}
<section class="section request">
	<div class="container">
		{{
			macros.sectionHeader(
				'request__header', 
				"<strong>ВЫБЕРИ</strong> свой <br> пакет участия", 
				"request__title"
			)
		}}
		<div class="row request__row">
			{% for item in items %}
				<div class="col-12 col-sm-6 col-md-5 request__item">
					<div class="request__item-inner">
						<img src="{{item.image}}" alt="{{item.title|striptags}}" class="request__item-image">
						<p class="request__item-title">{{item.title|raw}}</p>
						<ul class="list request__item-list">
							{% for li in item.list %}
								<li>{{li|raw}}</li>
							{% endfor %}
						</ul>
						<p class="request__item-price">{{item.price}}</p>
						<a href="{{item.link_href}}" class="anchor btn btn_lg btn_shadow btn_brand-1 effect effect_bounce-top">{{item.link_text|raw}}</a>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
</section>