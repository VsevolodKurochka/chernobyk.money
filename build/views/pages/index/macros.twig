{% macro video(image, src) %}
	<div class="video">
		<img src="{{image}}" alt="" class="video__image">
		<button class="video__button" data-action="modal" data-open="#modal-video" data-video="{{src}}"></button>
	</div>
{% endmacro %}

{% macro number(class, number, content) %}
	<div class="{{class}} number-item">
		<p class="number-item__number">{{number}}</p>
		<div class="number-item__content">{{content}}</div>
	</div>
{% endmacro %}

{% macro modalButton(text, class) %}
	<button class="btn btn_lg btn_shadow btn_brand-1 effect effect_bounce-top {{class}}" data-action="modal" data-open="#modal-form">{{text}}</button>
{% endmacro %}

{% macro sectionHeader(headerClass, title, titleClass, subtitle, subtitleClass) %}
	<div class="section__header {{headerClass}}">
		{% if title %}
			<h3 class="section__title {{titleClass}}">{{title|raw}}</h3>
		{% endif %}
		{% if subtitle %}
			<p class="section__subtitle {{subtitleClass}}">{{subtitle|raw}}</p>
		{% endif %}
	</div>
{% endmacro %}

{% macro formControl(id, name, text, checked) %}
	<label class="control control_white" for="{{id}}">
		{% if checked %}
			<input type="radio" id="{{id}}" name="{{name}}" checked="{{checked}}" />
		{% else %}
			<input type="radio" id="{{id}}" name="{{name}}"/>
		{% endif %}
		<div class="control__indicator"></div>
		<p class="control__text">{{text}}</p>
	</label>
{% endmacro %}

{% macro formRowInput(type, name, placeholder, image) %}
	<div class="form__row form__row_line">
		<img src="{{image}}" alt="Image for {{name}} input" class="form__image">
		<input type="{{type}}" class="form__control" name="{{name}}" placeholder="{{placeholder}}" required="required">
		<span class="form__line"></span>
	</div>
{% endmacro %}

{% macro formRowSubmit(text, class) %}
	<div class="form__row form__row_submit {{class}}">
		<button class="form__submit btn btn_lg btn_shadow btn_brand-1 effect effect_bounce-top" type="submit">{{text}}</button>
	</div>
{% endmacro %}