{% import 'pages/index/macros.twig' as macros %}

{% set title = "<strong>Приходи</strong> — и включи программу <strong>“Увеличение дохода”</strong>" %}
{% set subtitle = "<strong>для участия</strong> Заполните ваши данные и нажмите на <strong>кнопку “оплатить заказ”</strong>" %}

<section class="welcome">
	<div class="container">
		<div class="row">
			<div class="col-12 col-sm-6 col-md-6">
				{{macros.sectionHeader('welcome__header', title, "welcome__title", subtitle, 'welcome__subtitle')}}
			</div>
			<div class="col-md-1"></div>
			<div class="col-12 col-sm-6 col-md-4">
				<form action="#" class="form form_white form_block" method="POST">
					<div class="form__content">
						<div class="form__row">
						  <label class="control control_white" for="check1">
						    <input type="radio" id="check1" name="checks" checked="checked" />
						    <div class="control__indicator"></div>
						    <p class="control__text">Пакет Gold - XXXX грн</p>
						  </label>
						  <label class="control control_white" for="check2">
						    <input type="radio" id="check2" name="checks"/>
						    <div class="control__indicator"></div>
						    <p class="control__text">Пакет Platinum - XXXX грн</p>
						  </label>
						</div>
						{{macros.formRowInput('text', 'name', 'Имя', 'img/icon-avatar.png')}}
						{{macros.formRowInput('email', 'email', 'Email', 'img/icon-email.png')}}
						{{macros.formRowInput('phone', 'phone', 'Телефон', 'img/icon-phone.png')}}

						{{macros.formRowSubmit('Оплатить ЗАКАЗ')}}
					</div>
				</form>
			</div>
		</div>
	</div>
</section>